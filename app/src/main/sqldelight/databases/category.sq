CREATE TABLE kanken (
    id INTEGER PRIMARY KEY NOT NULL,
    global_id INTEGER NOT NULL,
    kyu TEXT NOT NULL,
    question_type TEXT NOT NULL,
    source TEXT,
    reference TEXT,
    FOREIGN KEY (global_id) REFERENCES progress(id)
);


CREATE TABLE jlpt (
    id INTEGER PRIMARY KEY NOT NULL,
    global_id INTEGER NOT NULL,
    level TEXT NOT NULL,
    question_type TEXT NOT NULL,
    source TEXT,
    reference TEXT,
    FOREIGN KEY (global_id) REFERENCES progress(id)
);

